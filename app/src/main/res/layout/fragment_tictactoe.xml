<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.ucsb.cs.cs184.runyu.minigames.ui.tictactoe.TicTacToe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Round: 1"
            android:textSize="40dp"
            android:textColor="#000000"
            android:autoSizeTextType="uniform"
            android:freezesText="true">
        </TextView>

        <TextView
            android:id="@+id/text_view_p1"
            android:layout_below="@id/text_view_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1: 0"
            android:textColor="#FF0000"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:textSize="30dp">
        </TextView>

        <TextView
            android:id="@+id/text_view_p2"
            android:layout_below="@id/text_view_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2: 0"
            android:textColor="#0000FF"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:textSize="30dp">
        </TextView>

        <TextView
            android:id="@+id/text_view_turn"
            android:layout_below="@id/text_view_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="This turn: Player 1"
            android:textColor="#FF0000"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:textSize="20dp">
        </TextView>

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Reset"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#F7Fe2E"
            android:textColor="#000000"
            android:textSize="20dp">
        </Button>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#BDBDBD"
            android:textSize="70dp">
        </Button>

        <Button
            android:id="@+id/button_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#BDBDBD"
            android:textSize="70dp">
        </Button>

        <Button
            android:id="@+id/button_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#BDBDBD"
            android:textSize="70dp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#BDBDBD"
            android:textSize="70dp">
        </Button>

        <Button
            android:id="@+id/button_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#BDBDBD"
            android:textSize="70dp">
        </Button>

        <Button
            android:id="@+id/button_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#BDBDBD"
            android:textSize="70dp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:freezesText="true"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#BDBDBD"
            android:textSize="70dp">
        </Button>

        <Button
            android:id="@+id/button_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#BDBDBD"
            android:textSize="70dp">
        </Button>

        <Button
            android:id="@+id/button_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#BDBDBD"
            android:textSize="70dp">
        </Button>

    </LinearLayout>


</LinearLayout>